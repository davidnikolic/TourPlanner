<Window x:Class="TourPlanner.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280">
    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Nav-Placeholder"/>
        <TabControl Grid.Column="1">
            <TabItem Header="General">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">
                    - General Information will be displayed here -
                </TextBlock>
            </TabItem>
            <TabItem Header="Route">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">
                    - The Map will be displayed here -
                </TextBlock>
            </TabItem>
            <TabItem Header="Misc." >
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">
                    - The Weather will be displayed here -
                </TextBlock>
            </TabItem>
        </TabControl>

        <Label Grid.Column="2" Content="TourLogs-Placeholder"/>
    </Grid>
</Window>
