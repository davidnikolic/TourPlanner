<UserControl x:Class="TourPlanner.UI.Views.TourListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:TourPlanner.UI.Views.Components"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300">

    <Grid Background="#F5F5F5">
        <Border Background="White"
                VerticalAlignment="Stretch"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="#D1D5DB"
                Padding="15"
                Margin="10">
            <StackPanel>
                <!-- Title and buttons -->
                <DockPanel Margin="0 0 0 10">
                    <TextBlock Text="Tours"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>

                    <!-- Reusable button component -->
                   <components:TourActionButtons DockPanel.Dock="Right" HorizontalAlignment="Right" /> 
                </DockPanel>

                <TextBox Text="{Binding SelectedTour.Name, UpdateSourceTrigger=PropertyChanged}" />

                <!-- List -->
                <DataGrid
                    ItemsSource="{Binding Tours}"
                    SelectedItem="{Binding SelectedTour}"
                    CanUserAddRows="False" CanUserDeleteRows="False"
                    >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
