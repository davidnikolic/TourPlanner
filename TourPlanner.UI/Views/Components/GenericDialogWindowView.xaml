<Window x:Class="TourPlanner.UI.Views.Components.GenericDialogWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generic Pop-Up" Height="500" Width="600" Background="White">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding PopUpText}"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#111827"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"/>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Fields}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Label, StringFormat={}{0}:}"
                                   Margin="4" VerticalAlignment="Center" Foreground="#374151"/>

                        <ContentControl Grid.Column="1" Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="TextBox">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                 Padding="6"
                                                                 Background="#F9FAFB"
                                                                 BorderBrush="#D1D5DB"
                                                                 BorderThickness="1"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="ComboBox">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <ComboBox ItemsSource="{Binding Options}"
                                                                  SelectedItem="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                  Padding="6"
                                                                  Background="#F9FAFB"
                                                                  BorderBrush="#D1D5DB"
                                                                  BorderThickness="1"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="DatePicker">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <DatePicker SelectedDate="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                    Padding="6"
                                                                    Background="#F9FAFB"
                                                                    BorderBrush="#D1D5DB"
                                                                    BorderThickness="1"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Apply"
                    Padding="8,4"
                    Background="#2563EB"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Width="100"
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </Grid>
</Window>
