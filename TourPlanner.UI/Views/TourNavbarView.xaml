<UserControl x:Class="TourPlanner.UI.Views.TourNavbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.UI.Views"
             mc:Ignorable="d" 
             Height="60" Background="#1F2937">
    <DockPanel VerticalAlignment="Top" Height="60" LastChildFill="True">
        <!-- App Title -->
        <TextBlock Text="TourPlanner"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="20,0,0,0"
                   DockPanel.Dock="Left" />

        <!-- Navigation Buttons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0"
                    DockPanel.Dock="Right">
            <Button Content="File"
                    Margin="5,0"
                    Padding="10,5"
                    Background="#374151"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    Command="{Binding FileCommand}"/>
            <Button Content="Edit"
                    Margin="5,0"
                    Padding="10,5"
                    Background="#374151"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14" />
            <Button Content="Options"
                    Margin="5,0"
                    Padding="10,5"
                    Background="#374151"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14" />
            <Button Content="Help"
                    Margin="5,0"
                    Padding="10,5"
                    Background="#374151"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14" />
        </StackPanel>
    </DockPanel>
</UserControl>
